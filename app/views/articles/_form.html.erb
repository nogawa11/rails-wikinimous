  <%= form_for(@article) do |f| %>
    <strong><%= f.label :title, class: "form-label mt-2" %></strong>
    <%= f.text_field :title, class: "form-control"%>
    <strong><%= f.label :content, class: "form-label mt-2" %></strong>
    <%= f.text_area :content, class: "form-control"%>
    <%= f.submit class: 'btn btn-outline-secondary mt-3' %>
  <% end %>
